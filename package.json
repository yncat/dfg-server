{
  "private": true,
  "name": "dfg-server",
  "version": "1.0.0",
  "description": "online daifugo game",
  "main": "lib/index.js",
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "echo 'not used.'",
    "schema:build": "schema-codegen src/rooms/schema/game.ts --output schema-def/ --ts && schema-codegen src/rooms/schema/global.ts --output schema-def/ --ts",
    "schema:copy": "copyfiles schema-def/*.ts ../dfg/src/logic",
    "clean": "node node_modules/rimraf/bin lib",
    "test": "mocha --require tsx test/**_test.ts --exit --timeout 20000 --reporter dot",
    "fmt-lint": "prettier -c test/**/*.ts src/**/*.ts",
    "fmt": "prettier -w src/**/*.ts test/**/*.ts",
    "lint": "eslint . --ext ts",
    "otp-secret-generate": "node tools/otp_secret_generate.js",
    "docker:build": "docker build -t dfg-server .",
    "docker:start": "docker run -p 2567:2567 -it --rm --name dfg-server dfg-server pnpm start"
  },
  "author": "Yukio Nozawa",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/colyseus/create-colyseus/issues"
  },
  "homepage": "https://github.com/colyseus/create-colyseus#readme",
  "engines": {
    "node": "25.x"
  },
  "devDependencies": {
    "@colyseus/loadtest": "^0.15.2",
    "@colyseus/testing": "^0.15.2",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/mocha": "^8.2.3",
    "@types/node-fetch": "^2.6.1",
    "@types/sinon": "^10.0.2",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "copyfiles": "^2.4.1",
    "eslint": "^7.31.0",
    "mocha": "^11.7.5",
    "prettier": "^2.3.2",
    "rimraf": "^2.7.1",
    "ts-node": "^10.9.1",
    "tsx": "^4.21.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@colyseus/monitor": "^0.15.1",
    "@colyseus/schema": "^3.0.70",
    "@colyseus/tools": "^0.15.2",
    "@mojotech/json-type-validation": "^3.1.0",
    "@types/clone": "^2.1.1",
    "clone": "^2.1.2",
    "colyseus": "^0.15.17",
    "cors": "^2.8.5",
    "dfg-messages": "github:yncat/dfg-messages#master",
    "dfg-simulator": "^1.3.7",
    "express": "^4.21.1",
    "node-fetch": "^2.6.7",
    "sinon": "^11.1.1",
    "ts-node-dev": "^1.0.0-pre.63"
  }
}
